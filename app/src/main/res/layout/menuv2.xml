<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <ImageView
            android:id="@+id/sblogo"
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/sblogo" />

        <TextView
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Type of Coffee"
            android:textAllCaps="true" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/iced_button"
            android:layout_width="105dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:background="@mipmap/iced"
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/frap_button"
            android:layout_width="105dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:background="@mipmap/frap"
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/hot_button"
            android:layout_width="105dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:background="@mipmap/hot"
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="16sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:onClick="submitOrder"
            android:text="Next"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>